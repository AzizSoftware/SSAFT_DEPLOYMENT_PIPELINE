pipeline {
    agent any

    environment {
        NODEJS_VERSION = 'node-18'  // Assure-toi que cette version est install√©e via le plugin NodeJS
        TEST_PIPELINE = 'SSAFT_TEST_PIPELINE' // Le nom exact du job Jenkins de test (Trivy, tests, etc.)
        SSH_CREDENTIALS_ID = 'azure_vm_key' // Assurez-vous que c'est bien l'ID de votre Credential SSH Jenkins
        APP_REPO_URL = 'https://github.com/AzizSoftware/SSAFT_DEPLOYMENT_PIPELINE.git'
    }

    tools {
        nodejs "${env.NODEJS_VERSION}"
    }

    stages {
        stage('Checkout Repo') {
            steps {
                script {
                    checkout([
                        $class: 'GitSCM',
                        branches: [[name: 'main']],
                        userRemoteConfigs: [[url: env.APP_REPO_URL, credentialsId: 'github-pat-azizsoftware']],
                        doNotPoll: true
                    ])
                    echo "Listing contents of the workspace after cloning the repository:"
                    sh 'pwd'
                    sh 'ls -lR'
                }
            }
        }

        stage('Install Dependencies') {
            steps {
                echo "Installing dependencies in SSATF/ and sub-projects using npm install..."
                dir('SSATF') {
                    sh 'npm install'

                    dir('Services/DataAnalyserService') {
                        sh 'npm install'
                    }

                    dir('Services/TransactionGenerationAPI') {
                        sh 'npm install'
                    }
                }

                dir('SSATF/Client_UI') {
                    sh 'npm install'
                }
            }
        }

        stage('Run Code Coverage') {
            steps {
                dir('SSATF') {
                    sh 'npm test -- --coverage --testResultsProcessor="jest-junit"'
                }
            }
        }

        stage('Build') {
            steps {
                echo "Running build in SSATF/..."
                dir('SSATF') {
                    sh 'npm run build'
                }
            }
        }
    }

    post {
        success {
            echo "CI pipeline succeeded. Triggering Test Pipeline..."
            build job: "${env.TEST_PIPELINE}", wait: true
        }

        failure {
            echo "CI pipeline failed. Aborting further steps."
        }
    }
}
